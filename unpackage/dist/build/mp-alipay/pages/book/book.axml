<view class="book data-v-6d9362f8"><view class="wrapper data-v-6d9362f8"><block a:if="{{book.book_id}}"><view class="book-title data-v-6d9362f8"><image src="{{'http://img.haokanread.com/book/cover/'+book.book_id+'/'+book.cover}}" class="data-v-6d9362f8"></image><view class="book-text data-v-6d9362f8"><view class="title1 data-v-6d9362f8">{{book.book_title}}</view><view class="data-v-6d9362f8">{{"书号"+book.book_id}}</view><view class="data-v-6d9362f8">{{book.pen_name}}</view><view class="data-v-6d9362f8">{{$root.m0+" ▏"}}<text class="book-status data-v-6d9362f8">{{book.is_finish==='Y'?'完结':'连载中'}}</text></view><view class="data-v-6d9362f8">{{book.hits+"次点击"}}</view></view></view></block><block a:if="{{book.book_id}}"><view data-event-opts="{{[['tap',[['openAndCloseBtn',['$event']]]]]}}" class="book-intro data-v-6d9362f8" onTap="__e"><view class="intro-head data-v-6d9362f8"><view class="head-left data-v-6d9362f8">简介</view><view class="head-right data-v-6d9362f8"><text class="data-v-6d9362f8">{{openStatusBtn?'合上':'展开'}}</text><text class="{{(('iconfont icon-f11-copy1 data-v-6d9362f8')+' '+(openStatusBtn?'icon-rotate-btn':''))}}"></text></view></view><view class="{{(('intro-cont data-v-6d9362f8')+' '+(openStatusBtn?'is_close':'is_unfold'))}}">{{''+book.description+''}}</view></view></block><view class="you-like data-v-6d9362f8"><view class="like-head data-v-6d9362f8"><text class="data-v-6d9362f8">猜你喜欢</text></view><view class="like-list data-v-6d9362f8"><block a:for="{{likelist}}" a:for-item="item" a:for-index="index" a:key="index"><block class="data-v-6d9362f8"><navigator class="like-book data-v-6d9362f8" open-type="redirect" url="{{'../book/book?id='+item.book_id}}"><image src="{{'http://img.haokanread.com/book/cover/'+item.book_id+'/'+item.cover}}" lazy-load="{{true}}" class="data-v-6d9362f8"></image><view class="like-title data-v-6d9362f8">{{item.book_title}}</view><view class="like-author data-v-6d9362f8">{{item.pen_name}}</view></navigator></block></block></view></v