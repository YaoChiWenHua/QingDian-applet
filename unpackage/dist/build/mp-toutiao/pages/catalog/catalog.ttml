<view class="catalog"><view class="catalog-head"><text class="catalogue-sort">{{"共 "+total+" 章"}}</text><view data-event-opts="{{[['tap',[['arrayType',['$event']]]]]}}" class="catalogue-right" bindtap="__e"><text class="iconfont"></text><text>{{sortType===0?'倒序':'正序'}}</text></view></view><view class="container"><block tt:for="{{cataloglist}}" tt:for-item="item" tt:for-index="index" tt:key="index"><block><navigator class="catalog-list" url="{{'../read/read?bId='+item.book_id+'&cId='+item.cindex}}"><text class="item-title">{{item.chapter_title}}</text><block tt:if="{{item.is_vip==='Y'}}"><text class="icons-vip"></text></block></navigator></block></block></view><view class="load-more"><text hidden="{{!(loadingShow)}}">加载更多</text><text hidden="{{!(!loadingShow)}}">没有更多了~</text></view></view>