<view class="other-read"><view class="other-head"><text>{{title}}</text><block tt:if="{{imgUrl}}"><image src="{{imgUrl}}"></image></block></view><view class="read-content"><block tt:for="{{book.content}}" tt:for-item="item" tt:for-index="index" tt:key="index"><block><view>{{item}}</view></block></block></view><view class="other-bottom"><block tt:if="{{flag==0}}"><view data-event-opts="{{[['tap',[['handleFlag',['$event']]]]]}}" bindtap="__e">阅读全文</view></block><block tt:else><view data-event-opts="{{[['tap',[['handleCollect',['$event']]]]]}}" bindtap="__e">{{collect?'已加入收藏':'加入收藏'}}</view></block></view></view>