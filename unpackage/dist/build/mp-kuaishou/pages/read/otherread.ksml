<view class="other-read"><view class="other-head"><text>{{title}}</text><block ks:if="{{imgUrl}}"><image src="{{imgUrl}}"></image></block></view><view class="read-content"><block ks:for="{{book.content}}" ks:for-item="item" ks:for-index="index" ks:key="index"><block><view>{{item}}</view></block></block></view><view class="other-bottom"><block ks:if="{{flag==0}}"><view data-event-opts="{{[['tap',[['handleFlag',['$event']]]]]}}" bindtap="__e">阅读全文</view></block><block ks:else><view data-event-opts="{{[['tap',[['handleCollect',['$event']]]]]}}" bindtap="__e">{{collect?'已加入收藏':'加入收藏'}}</view></block></view></view>